<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>com.consol.citrus.samples</groupId>
  <artifactId>citrus-samples</artifactId>
  <version>2.6.1-SNAPSHOT</version>
  <name>citrus-samples</name>
  <packaging>pom</packaging>
  
  <modules>
    <module>todo-app</module>
    <module>sample-bakery</module>
    <module>sample-javaee</module>
    <module>sample-flightbooking</module>
    <module>sample-greeting</module>
    <module>sample-bookstore</module>
    <module>sample-incident</module>
    <module>sample-camel-context</module>
    <module>sample-cucumber</module>
    <module>sample-cucumber-spring</module>
    <module>sample-cucumber-spring2</module>
    <module>sample-javaconfig</module>
    <module>sample-rest</module>
    <module>sample-dataprovider</module>
    <module>sample-xhtml</module>
    <module>sample-xml</module>
    <module>sample-json</module>
    <module>sample-databind</module>
    <module>sample-oxm</module>
    <module>sample-jms</module>
    <module>sample-dynamic-endpoints</module>
    <module>sample-binary</module>
    <module>sample-soap</module>
    <module>sample-jdbc</module>
  </modules>
  
  <repositories>
    <repository>
      <id>consol-labs-release</id>
      <url>http://labs.consol.de/maven/repository/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>consol-labs-snapshots</id>
      <url>http://labs.consol.de/maven/snapshots-repository/</url>
      <snapshots>
        <enabled>true</enabled>
        <!-- Policy: always, daily, interval:xxx (xxx=#minutes, 60*24*7=10080), never -->
        <updatePolicy>interval:10080</updatePolicy>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
    <repository>
        <id>com.springsource.repository.bundles.external</id>
        <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
        <url>http://repository.springsource.com/maven/bundles/external</url>
    </repository>
  </repositories>
  
  <pluginRepositories>
    <pluginRepository>
      <id>consol-labs-release</id>
      <url>http://labs.consol.de/maven/repository/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>consol-labs-snapshots</id>
      <url>http://labs.consol.de/maven/snapshots-repository/</url>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>interval:10080</updatePolicy>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>
</project>